    <div class="userForm">
        <h1 class="textSignUp">Create new user</h1>
        <% if (message.length> 0){ %>
            <div class="alert-message">
                <%= message %>
            </div>
            <% }%>
                <form id="userSignUpForm" class="userSignUpForm" action="/users/signup" method="post"
                    onsubmit="return validateForm()">
                    <div class="form-control">
                        <div class="userFormLabelLeft">
                            <label for="fname">Name: </label>
                        </div>
                        <div class="userTextBoxFloatRight">
                            <div class="userFormIconMidle">
                                <i class="fa-regular fa-user"></i>
                            </div>
                            <div class="userFormInputRight">
                                <input class="inputUserCreate" type="text" id="name" name="name"
                                    placeholder="Your name.." value="Israel Ruas" />
                            </div>
                        </div>
                        <small>Error Message</small>
                    </div>
                    <div class="form-control">
                        <div class="userFormLabelLeft">
                            <label for="fphone">Phone:</label>
                        </div>
                        <div class="userTextBoxFloatRight">
                            <div class="userFormIconMidle">
                                <i class="fa-sharp fa-solid fa-phone"></i>
                            </div>
                            <div class="userFormInputRight">
                                <input class="inputUserCreate" type="text" id="phone" name="phone"
                                    placeholder="Your phone.." value="0414277045" />
                            </div>
                        </div>
                        <small>Error Message</small>
                    </div>
                    <div class="form-control">
                        <div class="userFormLabelLeft">
                            <label for="femail">Email:</label>
                        </div>
                        <div class="userTextBoxFloatRight">
                            <div class="userFormIconMidle">
                                <i class="fa-regular fa-envelope"></i>
                            </div>
                            <div class="userFormInputRight">
                                <input class="inputUserCreate" type="text" id="email" name="email"
                                    placeholder="Your email.." value="t1@t1.com" />
                            </div>
                        </div>
                        <small>Error Message</small>
                    </div>
                    <div class="form-control" style="margin-bottom: 24px;">
                        <div class="userFormLabelLeft">
                            <label for="faddress">Address:</label>
                        </div>
                        <div class="userTextBoxFloatRight">
                            <div class="userFormIconMidle">
                                <i class="fa-solid fa-location-dot"></i>
                            </div>
                            <div class="userFormInputRight">
                                <textarea class="inputUserCreate" id="address" name="address" rows="3"
                                    cols="43">27/6 Ben Lomond Drive - Highland Park - QLD</textarea>
                                <!--<input class="inputUserCreate" type="text" id="address" name="address"
                                    placeholder="Your address.." value="27/" />
                                    -->
                            </div>
                        </div>
                        <small>Error Message</small>
                    </div>
                    <div class="form-control">
                        <div class="userFormLabelLeft">
                            <label for="fpostcode">Post Code:</label>
                        </div>
                        <div class="userTextBoxFloatRight">
                            <div class="userFormIconMidle">
                                <i class="fa-solid fa-map-location-dot"></i>
                            </div>
                            <div class="userFormInputRight">
                                <input class="inputUserCreate" type="number" id="postCode" name="postCode"
                                    placeholder="Your Post Code.." value="4211" />
                            </div>
                        </div>
                        <small>Error Message</small>
                    </div>
                    <div class="form-control">
                        <div class="userFormLabelLeft">
                            <label for="fcity">City:</label>
                        </div>
                        <div class="userTextBoxFloatRight">
                            <div class="userFormIconMidle">
                                <i class="fa-solid fa-tree-city"></i>
                            </div>
                            <div class="userFormInputRight">
                                <input class="inputUserCreate" type="text" id="city" name="city"
                                    placeholder="Your City.." value="Gold Coast" />
                            </div>
                        </div>
                        <small>Error Message</small>
                    </div>
                    <div class="form-control">
                        <div class="userFormLabelLeft">
                            <label for="fcountry">Country:</label>
                        </div>
                        <div class="userTextBoxFloatRight">
                            <div class="userFormIconMidle">
                                <i class="fa-solid fa-earth-americas"></i>
                            </div>
                            <div class="userFormInputRight">
                                <select class="selectCountryUserCreate" name="country" id="countrySelect">
                                </select>
                            </div>
                        </div>
                        <small>Error Message</small>
                    </div>
                    <div class="form-control">
                        <div class="userFormLabelLeft">
                            <label for="fpassword">Password:</label>
                        </div>
                        <div class="userTextBoxFloatRight">
                            <div class="userFormIconMidle">
                                <i class="fa-solid fa-key"></i>
                            </div>
                            <div class="userFormInputRight">
                                <input class="inputUserCreate" type="password" id="password" name="password"
                                    placeholder="Your password.." value="123456" />
                            </div>
                        </div>
                        <small>Error Message</small>
                    </div>
                    <div class="form-control">
                        <div class="userFormLabelLeft">
                            <label for="fpassword2">Confirm Password: </label>
                        </div>
                        <div class="userTextBoxFloatRight">
                            <div class="userFormIconMidle">
                                <i class="fa-solid fa-key"></i>
                            </div>
                            <div class="userFormInputRight">
                                <input class="inputUserCreate" type="password" id="password2" name="password2"
                                    placeholder="Confirm password.." value="123456" />
                            </div>
                        </div>
                        <small>Error Message</small>
                    </div>
                    <div class="form-control">
                        <div class="userFormLabelAdminLeft">
                            <label for="fadminCredential">Admin Credential: </label>
                        </div>
                        <div class="form-control-radio">

                            <div class="form-control-radio-parent">
                                <div class="admin-icon">
                                    <i class="fa-solid fa-user-tie"></i>
                                </div>
                                <div class="form-control-radio-yes">
                                    <input type="radio" class="radioAdmin" id="isAdmin" name="isAdmin" value="true">
                                    <label for="adminYes">Yes</label><br>
                                </div>
                                <div class="form-control-radio-no">
                                    <input type="radio" class="radioAdmin" id="isAdmin" name="isAdmin" value="false"
                                        checked>
                                    <label for="adminNo">No</label><br>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--<input type="submit" onclick="return confirm('Please, click Ok to confirm your Signup')" />-->
                    <input class="submitSignup" type="submit" onclick="window.location.reload()">
                    <button type="button" onclick="cleanForm()" class="userCleanButton"><i
                            class="fa-solid fa-broom"></i>Clean</button>
                </form>

